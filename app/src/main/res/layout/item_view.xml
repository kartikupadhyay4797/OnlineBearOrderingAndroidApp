    android:layout_width="match_parent"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:background="#ddFFFFFF"
    android:layout_marginLeft="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    >

